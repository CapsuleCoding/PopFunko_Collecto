<%= form_for @pop_funko do |f| %>
    
    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    
    <br>

    <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
    </div>

    <p>Please Select the Pop Funko Category:</p>
    
    <div>
    <%= f.collection_select(:category_id,Category.all, :id, :name, include_blank: true ) %>
    </div>


    <p>New Pop Funko Category? </p>
     
    <div>
    <%= f.fields_for :category do |s| %>
        <%= s.label :name %>
        <%= s.text_field :name %>
    <% end %>

    </div>
    
    <%= f.submit "Create" %>
  <% end %>

 